{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "module": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src"]
}
